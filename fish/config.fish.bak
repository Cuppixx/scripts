source /usr/share/cachyos-fish-config/cachyos-config.fish
# Don't forget to run: cp ~/.config/fish/config.fish /mnt/data/sourcecode/scripts/fish/config.fish.bak


function glow
	command glow --width=(tput cols) $argv
end

function lls
	command ls $argv
end

function cdquick
	switch $argv[1]
		case 1
			cd /mnt/data/software/engines/godot/official/
		case 2
			cd /mnt/data/sourcecode/games/godot/projects/ProjectFolklore/
		case *
			echo "Unknown project: $argv[1]"
	end
end

# git aliases
function gs
	git status $argv
end
function ga
	git add $argv
end
function gcm
	git commit -m $argv
end
function gco
	git checkout $argv
end